<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->
<div class="header-flat">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="header-flat-details">
          <div class="header-flat-owner  text-center">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle"%>
            <% flat = data.flats[owner] %>
            <p><%= flat.name %></p>
          </div>
          <div class="header-flat-name">
            <h4><%= flat.description %></h4>
            <p><%= flat.city_name %></p>
            <p><%= flat.rating %></p>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <form action="#" method="post">
          <h2>Book this flat</h2>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkin" id="checkin">
              </div>
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkout">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select name="" id="guests" class="form-control">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
          </div>
          <input type="submit" class="btn btn-book" value="Book it" style="width: 100%">
        </form>
      </div>
    </div>
  </div>
</div>
<div id="flat-description">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <h2>About this flat</h2>
        <p><%= flat.description_text %></p>
        <hr>
        <div class="row" id="flat-data">
          <div class="col-xs-12 col-sm-2">
            The Space
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li>Accommodates:  <strong>2</strong></li>
              <li>Bathrooms:  <strong><%= flat.bathroom_number%></strong></li>
              <li>Bed type:  <strong><%= flat.bed_type%></strong></li>
              <li>Bedrooms:  <strong><%= flat.room_number%></strong></li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li>Property type: <strong><%= flat.property_type%></strong></li>
              <li>Room type: <strong></strong></li>
            </ul>
          </div>
        </div>
        <div class="row" id="flat-data">
          <div class="col-xs-12 col-sm-2">
            Amenities
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li><i class="fa fa-cutlery"></i><strong>Kitchen</strong></li>
              <li><i class="fa fa-wifi"></i><strong><%= flat.wifi%></strong></li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li><i class="fa fa-desktop"></i><strong>Wifi</strong></li>
              <li><i class="fa fa-glass"></i><strong>Welcome drink</strong></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
